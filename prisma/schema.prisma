datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  name          String
  password      String   // Campo obrigatório para a senha
  role          String
  department    String?
  phone         String?
  image         String?  // Adicionar este campo opcional
  joinDate      DateTime @default(now())
  status        String   @default("active")

  assignedTasks Task[]   @relation("AssigneeTasks")
  createdTasks  Task[]   @relation("CreatedTasks")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      String
  priority    String
  assigneeId  Int
  assignee    User     @relation("AssigneeTasks", fields: [assigneeId], references: [id])
  createdById Int
  createdBy   User     @relation("CreatedTasks", fields: [createdById], references: [id])
  dueDate     DateTime
  project     String?
  tags        String?   // agora é String simples, armazene CSV

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
